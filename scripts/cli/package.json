{
    "name": "@auction-factory/cli",
    "version": "0.0.1",
    "main": "./build/cli.js",
    "license": "MIT",
    "scripts": {
        "build": "tsc -p ./src",
        "watch": "tsc -w -p ./src",
        "format": "prettier --loglevel warn --write \"**/*.{ts,js,json,yaml}\"",
        "format:check": "prettier --loglevel warn --check \"**/*.{ts,js,json,yaml}\"",
        "lint": "eslint \"src/**/*.ts\" --fix",
        "lint:check": "eslint \"src/**/*.ts\"",
        "test": "jest"
    },
    "pkg": {
        "scripts": "./build/**/*.{js|json}"
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "targets": {
                        "node": "current"
                    }
                }
            ],
            "@babel/preset-typescript"
        ]
    },
    "jest": {
        "testPathIgnorePatterns": [
            "<rootDir>/build/",
            "<rootDir>/node_modules/"
        ]
    },
    "dependencies": {
        "@auction-factory/sdk": "file:../../sdk",
        "@project-serum/anchor": "^0.17.0",
        "@solana/spl-token": "^0.1.8",
        "@solana/web3.js": "1.33.0",
        "borsh": "^0.4.0",
        "canvas": "^2.8.0",
        "commander": "^8.1.0",
        "jsonschema": "^1.4.0",
        "lodash": "^4.17.21",
        "loglevel": "^1.7.1",
        "node-fetch": "^2.6.1",
        "weighted": "^0.3.0"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.15.6",
        "@babel/preset-typescript": "^7.15.0",
        "@types/jest": "^27.0.1",
        "jest": "^27.4.5",
        "typescript": "^4.3.5"
    }
}
